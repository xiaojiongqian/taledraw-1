{
  "name": "tale-draw-functions",
  "description": "Firebase Functions for Tale Draw App",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:my-functions": "firebase deploy --only functions:generateTaleStream,getTaleData,generateImage,generateImageV4,healthCheck,imageProxy",
    "deploy:stream": "firebase deploy --only functions:generateTaleStream",
    "deploy:image": "firebase deploy --only functions:generateImage,generateImageV4",
    "deploy:core": "firebase deploy --only functions:generateTaleStream,getTaleData",
    "deploy:all-images": "firebase deploy --only functions:generateImage,generateImageV4",
    "deploy:health": "firebase deploy --only functions:healthCheck",
    "logs": "firebase functions:log",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "predeploy": "npm run lint"
  },
  "engines": {
    "node": "22"
  },
  "main": "index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.3.2",
    "google-auth-library": "^9.4.1",
    "node-fetch": "^2.7.0",
    "sharp": "^0.33.4",
    "stripe": "^16.5.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0",
    "mocha": "^10.7.0"
  },
  "private": true
}
